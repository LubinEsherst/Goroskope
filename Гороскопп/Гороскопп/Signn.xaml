<Window x:Class="Гороскопп.Signn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Гороскопп"
        mc:Ignorable="d"
        Title="Зз" Height="450" Width="450"
        ResizeMode="NoResize">

    <Grid>
        <StackPanel>
            <StackPanel.Background>
                <ImageBrush ImageSource="/Знаки зодиака.png"/>
            </StackPanel.Background>
            <Image></Image>
        </StackPanel>
        <Menu  Height="25" VerticalAlignment="Top">
            <MenuItem Header="Гороскоп для зз" Height="24" FontSize="16">
                <MenuItem Header="Овен" Click="Aries_Click" ></MenuItem>
                <MenuItem Header="Телец" Click="Taurus_Click"></MenuItem>
                <MenuItem Header="Близнецы" Click="Gemini_Click"></MenuItem>
                <MenuItem Header="Рак" Click="Cancer_Click"></MenuItem>
                <MenuItem Header="Лев" Click="Leo_Click"></MenuItem>
                <MenuItem Header="Дева" Click="Virgo_Click"></MenuItem>
                <MenuItem Header="Весы" Click="Libra_Click"></MenuItem>
                <MenuItem Header="Скорпион" Click="Scorpio_Click"></MenuItem>
                <MenuItem Header="Стрелец" Click="Sagittarius_Click"></MenuItem>
                <MenuItem Header="Козерог" Click="Capricorn_Click"></MenuItem>
                <MenuItem Header="Водолей" Click="Aquarius_Click"></MenuItem>
                <MenuItem Header="Рыбы" Click="Fish_Click"></MenuItem>
            </MenuItem>
            <Button Name="btnOtvet" Click="btnOtvet_Click" >♥Узнать знак зодиака♥</Button>
            <Button x:Name="btnClose" Content="Выход" Click="btnClose_Click"/>
        </Menu>
        <ListView Name="lstvZz" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center" Width="189" Height="150" Margin="0,0,0,0">
            <TextBlock  Background="LightGray" IsEnabled="False" >Характеристики ЗЗ</TextBlock>
            <ListViewItem Background="SandyBrown" Selected="ListViewItem_Selected">Овен</ListViewItem>
            <ListViewItem Background="Gray" Selected="ListViewItem_Selected_1">Телец</ListViewItem>
            <ListViewItem Background="SandyBrown" Selected="ListViewItem_Selected_2">Близнецы</ListViewItem>
            <ListViewItem Background="Gray" Selected="ListViewItem_Selected_3">Рак</ListViewItem>
            <ListViewItem Background="SandyBrown" Selected="ListViewItem_Selected_4">Лев</ListViewItem>
            <ListViewItem Background="Gray" Selected="ListViewItem_Selected_5">Дева</ListViewItem>
            <ListViewItem Background="SandyBrown" Selected="ListViewItem_Selected_6">Весы</ListViewItem>
            <ListViewItem Background="Gray" Selected="ListViewItem_Selected_7">Скорпион</ListViewItem>
            <ListViewItem Background="SandyBrown" Selected="ListViewItem_Selected_8">Стрелец</ListViewItem>
            <ListViewItem Background="Gray" Selected="ListViewItem_Selected_9">Козерог</ListViewItem>
            <ListViewItem Background="SandyBrown" Selected="ListViewItem_Selected_10">Водолей</ListViewItem>
            <ListViewItem Background="Gray" Selected="ListViewItem_Selected_11">Рыбы</ListViewItem>
        </ListView>


    </Grid>
</Window>